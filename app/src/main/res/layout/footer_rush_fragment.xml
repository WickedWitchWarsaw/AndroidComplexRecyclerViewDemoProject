<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="25dp"
    >


    <View
        android:id="@+id/footer_rush_fragment_line1"
        android:layout_width="250dp"
        android:layout_height="2dp"
        android:background="#000000"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/footer_rush_fragment_follow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="@string/follow_us"
        android:layout_below="@+id/footer_rush_fragment_line1"
        android:layout_marginTop="3dp"
        android:layout_centerHorizontal="true"/>

    <View
        android:id="@+id/footer_rush_fragment_line2"
        android:layout_width="250dp"
        android:layout_height="2dp"
        android:background="#000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/footer_rush_fragment_follow"
        android:layout_marginBottom="20dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/footer_rush_fragment_line2"
       >

        <ImageView
            android:id="@+id/footer_rush_fragment_faceBook"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/footer_rush_fragment_twitter"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/footer_rush_fragment_snapChat"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/footer_rush_fragment_Instagram"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"/>

    </LinearLayout>

</RelativeLayout>