<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center"
    app:cardCornerRadius="5dp"
    app:contentPadding="25dp"
    app:cardElevation="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/list_rush_event_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/list_rush_event_name"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:text="test"
                android:textSize="20sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/list_rush_event_date"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="test"
                android:textSize="20sp"
                android:textStyle="italic"
                />

        </LinearLayout>

        <View
            android:id="@+id/list_rush_event_line1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/list_rush_event_name_layout"
            android:background="#000000"
            android:layout_marginTop="8dp">
        </View>

        <TextView
            android:id="@+id/list_rush_event_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_below="@id/list_rush_event_line1"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="test"/>

        <TextView
            android:id="@+id/list_rush_event_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_rush_event_location"
            android:textSize="15sp"
            android:text="test"/>



    </RelativeLayout>



</android.support.v7.widget.CardView >