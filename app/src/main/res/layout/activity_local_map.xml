<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <WebView
        android:id="@+id/activity_local_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       />

    <LinearLayout
        android:id="@+id/activity_map_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#99000000"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/activity_localMap_rush_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />


        <LinearLayout
            android:id="@+id/localMap_linearLayout_date_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_map_info_layout"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/activity_localMap_rush_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:text="Date"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="italic" />

            <View
                android:id="@+id/map_activity_line1"
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:background="#FFFFFF"></View>

            <TextView
                android:id="@+id/activity_localMap_rush_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Time"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="italic" />

            <View
                android:id="@+id/map_activity_line2"
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:background="#FFFFFF"></View>

            <TextView
                android:id="@+id/activity_localMap_rush_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="address"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="italic"
                android:paddingLeft="10dp"/>

        </LinearLayout>



        <View
            android:id="@+id/map_activity_line3"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#FFFFFF"
            android:layout_marginTop="4dp"></View>

        <TextView
            android:id="@+id/activity_localMap_rush_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="description"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="italic"
            android:layout_margin="5dp"
            android:layout_gravity="left"/>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar_activity_local_map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>